{
  "extends": "./web/core/.stylelintrc.json",
  "rules": {
    "string-quotes": "single",
    "at-rule-empty-line-before": ["always", {
      "ignoreAtRules": [
        "import",
        "extends",
        "tailwind",
        "layer",
        "apply",
        "variants",
        "responsive",
        "screen"
        ]
    }],
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "tailwind",
        "layer",
        "apply",
        "variants",
        "responsive",
        "screen"
      ]
    }]
  }
}
